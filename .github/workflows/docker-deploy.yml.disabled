name: Docker Build and Deploy to VPS

on:
  push:
    branches:
      - master
      - main
  workflow_dispatch:

env:
  IMAGE_NAME: ${{ secrets.DOCKER_USERNAME }}/portfolio

jobs:
  build-and-push:
    name: Build Docker Image
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: |
            ${{ env.IMAGE_NAME }}:latest
            ${{ env.IMAGE_NAME }}:${{ github.sha }}
          cache-from: type=registry,ref=${{ env.IMAGE_NAME }}:buildcache
          cache-to: type=registry,ref=${{ env.IMAGE_NAME }}:buildcache,mode=max
          build-args: |
            BUILDTIME=${{ github.event.head_commit.timestamp }}
            VERSION=${{ github.sha }}

  deploy:
    name: Deploy to VPS
    needs: build-and-push
    runs-on: ubuntu-latest
    
    steps:
      - name: Deploy to VPS via SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ${{ secrets.VPS_USERNAME }}
          password: ${{ secrets.VPS_PASSWORD }}
          port: ${{ secrets.VPS_PORT }}
          timeout: 60s
          command_timeout: 30m
          script: |
            echo "ğŸš€ Starting deployment..."
            
            # Create deployment directory if it doesn't exist
            mkdir -p ~/portfolio
            cd ~/portfolio
            
            # Login to Docker Hub
            echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin
            
            # Pull the latest image
            echo "ğŸ“¦ Pulling latest image..."
            docker pull ${{ env.IMAGE_NAME }}:latest
            
            # Stop and remove old container
            echo "ğŸ›‘ Stopping old container..."
            docker stop portfolio 2>/dev/null || true
            docker rm portfolio 2>/dev/null || true
            
            # Run new container
            echo "â–¶ï¸  Starting new container..."
            docker run -d \
              --name portfolio \
              --restart unless-stopped \
              -p 3000:3000 \
              -e NODE_ENV=production \
              ${{ env.IMAGE_NAME }}:latest
            
            # Wait for container to start
            sleep 5
            
            # Check if container is running
            if docker ps | grep -q portfolio; then
              echo "âœ… Container is running!"
              docker ps | grep portfolio
            else
              echo "âŒ Container failed to start!"
              docker logs portfolio
              exit 1
            fi
            
            # Clean up old images
            echo "ğŸ§¹ Cleaning up old images..."
            docker image prune -af --filter "until=24h"
            
            # Logout from Docker Hub
            docker logout
            
            echo "ğŸ‰ Deployment complete!"
            echo "ğŸ“Š Container status:"
            docker ps --filter name=portfolio --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"

  notify:
    name: Deployment Status
    needs: deploy
    runs-on: ubuntu-latest
    if: always()
    
    steps:
      - name: Check deployment status
        run: |
          if [ "${{ needs.deploy.result }}" == "success" ]; then
            echo "âœ… Deployment successful!"
            echo "ğŸŒ Site should be live at http://${{ secrets.VPS_HOST }}:3000"
          else
            echo "âŒ Deployment failed!"
            exit 1
          fi
